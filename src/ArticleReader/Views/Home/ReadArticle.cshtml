@model ArticleReader.Models.SpeechModel

@{
    ViewBag.Title = "ReadArticle";
}

<h2>Read Article</h2>

<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
        <label class="form-group">Click to play audio</label>
        <audio controls>
            <source src="@Url.Action("PlayAudio", "Home", new { token = ViewBag.Token, key = ViewBag.Key, content = ViewBag.Content, locale = ViewBag.LocaleCode  })" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
    </div>

    <div class="col-md-10">
        <span style="white-space: pre-line">
            @Html.Label("Article Content")
        </span>
    </div>

    <div class="col-md-10 col-form-label">
        <p>@ViewBag.Content</p>
        @*@Html.LabelFor(model => model.Content, (string)@ViewBag.Content)*@
    </div>

</div>